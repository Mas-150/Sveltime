{
  "manifest_version": 3,

  "name": "Tool Test",
  "version": "1.0",

  "description": "Developer Tools for Svelte",
  "author": "Team Sveltetime",

  "devtools_page": "extension/html/devtools.html",
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["/extension/js/content.js"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ]
}
